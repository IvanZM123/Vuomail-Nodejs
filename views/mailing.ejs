<%- include("includes/header"); %>
    <%- include("components/navbar-dashboard"); %>

    <div class="container py-2">
        <%- include("components/alert"); %>
        
        <div class="row justify-content-center">
            <div class="col-12 col-sm-8 col-md-6 col-xl-4 p-2">
                <form action="/mails/send" method="POST">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Asunto</label>
                                <input
                                    class="form-control"
                                    name="subject"
                                    autofocus
                                    required
                                >
                                <small class="form-text text-muted">Ingresa un asunto</small>
                            </div>
                            <div class="form-group">
                                <label>Remitente</label>
                                <input
                                    class="form-control"
                                    name="receiver"
                                    type="email"
                                    required
                                >
                                <small class="form-text text-muted">Ingresa el email del remitente</small>
                            </div>
                            <div class="form-group">
                                <label>Mensaje</label>
                                <textarea
                                    placeholder="Escribe un mensaje"
                                    class="form-control"
                                    name="text"
                                    rows="3"
                                    required
                                ></textarea>
                            </div>
                            <button
                                type="submit"
                                class="btn btn-danger w-100"
                            >Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%- include("includes/footer"); %>